                    	scanf("%i", &n4);


                    	printf("%2d X %2d = %3d \t | \t %2d X %2d = %3d \n", n1, 1, n1 * 1, n2, 1, n2 * 1);
                    	printf("%2d X %2d = %3d \t | \t %2d X %2d = %3d \n", n1, 2, n1 * 2, n2, 2, n2 * 2);
